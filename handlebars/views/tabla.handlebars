{{#if productos.length includeZero=false}}
    <div class="container mt-3">
        <div class="jumbotron" >
            <div  action="/productos" method="get" class="table-responsive">
                <table class="table table-dark">
                    <tr style="color: blue;"> <th>Nombre</th> <th>Precio</th> <th>Url imagen </th> </tr>
                    {{#each productos}}
                        <tr>
                            <td>{{this.nombre}}</td>
                            <td>{{this.precio}}</td>
                            <td><img src={{this.url}} alt=""></td>
                        </tr>
                    {{/each}}
                </table>
                 
            </div>
            <a href="/" class="btn btn-success mt-3 mb-5">Volver al formulario</a>
        </div>
    </div>
{{else}}
    <h3 class="alert alert-danger">no se encontraron datos</h1>
{{/if}}
